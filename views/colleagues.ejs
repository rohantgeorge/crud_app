<!-- Include Header -->
<%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container" id="adminDashboard">
    <div class="box-nav d-flex justify-content-between">
      <div></div>

      <div class="d-flex flex-gap-20">
        <!-- <select
          class="date-filter-handle filter-handle"
          id="date-filter-handle"
        >
          <i class="fa-solid fa-caret-down"></i>
          <option value="">Filter by Date</option>
        </select> -->
        <select
          class="jobType-filter-handle filter-handle"
          id="jobType-filter-handle"
        >
          <i class="fa-solid fa-caret-down"></i>
          <option value="">Filter by Job Type</option>
          <option value="Full-time">Full-time</option>
          <option value="Part-time">Part-time</option>
        </select>
      </div>
    </div>

    <!-- Form Handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Job Type</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="table" class="filter-table-data">
          <% for(var i = 0; i < users.length; i++) { %>
          <% var count = 0; %>
          <% for(var j = 0; j < 7; j++) { %>
          <% } %>

          <tr data-id="<%= users[i]._id  %>" data-jobType="<%= users[i].jobType %>">
            <td><%= i + 1 %></td>
            <td>
              <a class="link" href="/employee?id=<%= users[i]._id %>"
                ><%= users[i].name %></a
              >
            </td>
            <td><%= users[i].email %></td>
            <td><%= users[i].jobType %></td>
            <td>
              <a
                href="/create_ticket?id=<%= users[i]._id %>"
                class="btn-border-shadow update"
                ><span class="text-gradient">Create a Request</span></a
              >
            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- Include Footer -->
<%- include('include/_footer') %>
<!-- /Include Footer -->
