<div id="availability" class="modal-box">
  <header>
    <a href="javascript:void(0);" class="js-modal-close close">Ã—</a>
    <h3>Update Your Availability</h3>
    <span class="text-dark"
      >Use the below form to update your availability</span
    >
  </header>
  <div class="modal-body">
    <!-- Form Handling -->
    <form id="update_availability">
      <div class="new_user">
        <div class="row d-flex">
          <div
            class="col-lg-4 d-flex flex-wrap flex-column justify-content-between"
          >
            <h4>Sunday</h4>
            <h4>Monday</h4>
            <h4>Tuesday</h4>
            <h4>Wednesday</h4>
            <h4>Thursday</h4>
            <h4>Friday</h4>
            <h4>Saturday</h4>
          </div>
          <!--  -->
          <div class="col-lg-4 d-flex flex-wrap">
            <div class="form-group">
              <input type="hidden" name="id" value="<%= allUser[0]?._id %>" />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="sundayAvailabilityClockInTime"
                type="text"
                id="sundayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.sundayAvailabilityClockInTime%>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="mondayAvailabilityClockInTime"
                type="text"
                id="mondayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.mondayAvailabilityClockInTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="tuesdayAvailabilityClockInTime"
                type="text"
                id="tuesdayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.tuesdayAvailabilityClockInTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="wednesdayAvailabilityClockInTime"
                type="text"
                id="wednesdayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.wednesdayAvailabilityClockInTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="thursdayAvailabilityClockInTime"
                type="text"
                id="thursdayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.thursdayAvailabilityClockInTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="fridayAvailabilityClockInTime"
                type="text"
                id="fridayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.fridayAvailabilityClockInTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="saturdayAvailabilityClockInTime"
                type="text"
                id="saturdayAvailabilityClockInTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.saturdayAvailabilityClockInTime %>"
              />
            </div>
          </div>
          <!--  -->
          <div class="col-lg-4 d-flex flex-wrap">
            <div class="form-group timepicker_div">
              <input
                name="sundayAvailabilityClockOutTime"
                type="text"
                id="sundayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.sundayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="mondayAvailabilityClockOutTime"
                type="text"
                id="mondayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.mondayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="tuesdayAvailabilityClockOutTime"
                type="text"
                id="tuesdayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.tuesdayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="wednesdayAvailabilityClockOutTime"
                type="text"
                id="wednesdayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.wednesdayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="thursdayAvailabilityClockOutTime"
                type="text"
                id="thursdayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.thursdayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="fridayAvailabilityClockOutTime"
                type="text"
                id="fridayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.fridayAvailabilityClockOutTime %>"
              />
            </div>
            <div class="form-group timepicker_div">
              <input
                name="saturdayAvailabilityClockOutTime"
                type="text"
                id="saturdayAvailabilityClockOutTime"
                class="form-control timepicker"
                value="<%= allUser[0]?.saturdayAvailabilityClockOutTime %>"
              />
            </div>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>
