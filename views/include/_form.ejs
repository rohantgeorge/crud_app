<!-- Form Handling -->
<form action="/api/users" id="add_user" method="POST">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" placeholder="Rohan T George" />
    </div>

    <div class="form-group">
      <label for="email" class="text-light">Email</label>
      <input type="text" name="email" value="" placeholder="rohan@gmail.com" />
    </div>

    <div class="form-group">
      <label for="gender" class="text-light">Gender</label>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="gender" value="Male" />
        <label for="radio-2" class="text-light radio-label">Male</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="gender" value="Female" />
        <label for="radio-3" class="text-light radio-label">Female</label>
      </div>
    </div>

    <div class="form-group">
      <label for="status" class="text-light">Status</label>
      <div class="radio inline">
        <input type="radio" id="radio-4" name="status" value="Active" />
        <label for="radio-4" class="text-light radio-label">Active</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-5" name="status" value="Inactive" />
        <label for="radio-5" class="text-light radio-label">Inactive</label>
      </div>
    </div>

    <div class="form-group timepicker_div">
      <label for="clockInTime" class="text-light">Clock-in Time</label>
      <input
        name="clockInTime"
        type="text"
        id="clockInTime"
        class="form-control timepicker"
      />
    </div>

    <div class="form-group timepicker_div">
      <label for="clockOutTime" class="text-light">Clock-out Time</label>
      <input
        name="clockOutTime"
        type="text"
        id="clockOutTime"
        class="form-control timepicker"
      />
    </div>

    <div class="form-group">
      <label class="text-light" for="datepicker"
        >Pick a Date
        <input
          type="text"
          name="datepicker"
          id="datepicker"
          autocomplete="off"
        />
      </label>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
