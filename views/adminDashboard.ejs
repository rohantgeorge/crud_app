<!-- Include Header -->
<%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add_user" class="border-shadow">
        <span class="text-gradient">New User <i class="fa fa-user"></i></span>
      </a>

      <div>
        <select class="filter-handle" id="date-filter-handle">
          <i class="fa-solid fa-caret-down"></i>
          <option value="">Filter by location</option>
          <option value="sunnyvale">Sunnyvale</option>
          <option value="madison">Madison</option>
        </select>
      </div>
    </div>

    <!-- Form Handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>@Email</th>
            <th>Gender</th>
            <th>Clock-in Time</th>
            <th>Clock-out Time</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <table class="table filter-table-data">
          <tbody>
            <%- include('include/_show') %>
          </tbody>
        </table>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- Include Footer -->
<%- include('include/_footer') %>
<!-- /Include Footer -->
