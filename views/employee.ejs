<!-- Include Header -->
<%- include('include/_header') %>
<!-- /Include Header -->

<!-- Main Site -->
<main class="container main pt-5" id="employeeDashboard">
  <div id="employee_legend" class="row">
    <div class="col col-lg-8 position-relative">
      <h1 class="blue m-0"><%= user?.name %></h1>
      <p class="employee_position m-0"><%= user?.jobType %></p>
      <a
        href="/update_availability?id=<%= user?._id %>"
        class="btn-border-shadow update"
        ><span class="text-gradient">
          <i class="fas fa-pencil-alt"></i> Edit Availability
        </span></a
      >
    </div>
    <div class="col col-lg-4 d-flex justify-content-between">
      <div class="current-schedule-legend d-flex align-items-center">
        <span class="current-color"></span>
        <span class="ml-1"> Current Schedule</span>
      </div>
      <div class="availability-legend d-flex align-items-center">
        <span class="availability-color"></span>
        <span class="ml-1"> Availability</span>
      </div>
    </div>
  </div>
  <%- include('include/_employeeInfo') %>
</main>

<!-- /Main Site -->

<!-- Include Footer -->
<%- include('include/_footer') %>
<!-- /Include Footer -->
